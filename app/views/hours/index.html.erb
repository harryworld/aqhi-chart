<p id="notice"><%= notice %></p>

<h1>Listing Hours</h1>

<table>
  <thead>
    <tr>
      <th>District</th>
      <th>No2</th>
      <th>O3</th>
      <th>So2</th>
      <th>Co</th>
      <th>Pm10</th>
      <th>Pm25</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hours.each do |hour| %>
      <tr>
        <td><%= hour.district_id %></td>
        <td><%= hour.no2 %></td>
        <td><%= hour.o3 %></td>
        <td><%= hour.so2 %></td>
        <td><%= hour.co %></td>
        <td><%= hour.pm10 %></td>
        <td><%= hour.pm25 %></td>
        <td><%= link_to 'Show', hour %></td>
        <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
        <td><%= link_to 'Destroy', hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

